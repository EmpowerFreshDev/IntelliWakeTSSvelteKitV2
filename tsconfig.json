{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"module": "es2022",       // or "esnext"
    "moduleResolution": "bundler", // optional, but modern
    "target": "es2022",       // or "esnext"
    "lib": ["DOM", "ES2022"], // or ESNext
	}
}
